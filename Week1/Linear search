#include <stdio.h>
int linearSearch(int [],int,int);

int main()
{
    int a[10];
    int n,i,x,result;
    printf("Enter the number of elements \n");
    scanf("%d",&n);
    printf("Enter the %d elements",n);
    for(i = 0; i < n; i++){
        scanf("%d",&a[i]);
    }
    printf("Enter the serach element \n");
    scanf("%d",&x);
    result = linearSearch(a,n,x);
    if (result == -1){
        printf("Element not found \n");
    }
    else{
        printf("Element is found at %d position",result);
    }
}
int linearSearch(int a[],int n,int key){
    int i;
    for(i = 0; i <n ; i++){
        if(a[i] == key){
            return i + 1;
        }
    }
    return -1;
}

Input:
Enter the number of elements
4
Enter the 4 elements1 3 5 6
Enter the serach element
3
Output:
Element is found at 2 position

Input:
Enter the number of elements
5
Enter the 5 elements12 34 45 65 70
Enter the serach element
50
Output:
Element not found
